{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2022",
        "module": "ESNext",
        "outDir": "./dist",
        "strict": true,
        "types": [
            "node",
            "react",
            "react-dom"
        ]
    },
    "angularCompilerOptions": {
        "strictInjectionParameters": true,
        "strictTemplates": true,
        "compilationMode": "partial"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/test.ts",
        "src/**/*.spec.ts"
    ]
}